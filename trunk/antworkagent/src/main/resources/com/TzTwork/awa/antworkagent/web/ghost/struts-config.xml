<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
		"http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
	<form-beans>
		<form-bean name="loginForm" type="org.apache.struts.validator.LazyValidatorForm"/>
		<form-bean name="managerForm" type="org.apache.struts.validator.LazyValidatorForm"/>
	</form-beans>
	<action-mappings>
		<action path="/loginAction" name="loginForm" scope="request" parameter="method" validate="false">
			<forward name="succ" path="/main.jsp"></forward>
			<forward name="visitor" path="/main.jsp"></forward>
		</action>
		<action path="/managerAction" name="managerForm" scope="request" parameter="method" validate="false">
			<forward name="userList" path="/managerAction.antwork?method=showUserinfo"></forward>
			<forward name="userinfo_list" path="/manager_userinfo.jsp"></forward>
		</action>
	</action-mappings>
</struts-config>